@{
    ViewData["Title"] = "Profil";
    var nickName = ViewContext.HttpContext.Session.GetString("NickName");
    var userId = ViewContext.HttpContext.Session.GetString("UserId");
    var userProfile = ViewBag.UserProfile as WebApp.Models.ProfileViewModel.UserProfileViewModel;
    var isProfileCompleted = userProfile?.IsProfileCompleted ?? false;
    var displayName = string.IsNullOrEmpty(nickName) ? "Kullanıcı" : nickName;
    var displayInitial = string.IsNullOrEmpty(nickName) ? "U" : nickName.Substring(0, 1).ToUpper();
}

<div class="container py-4">
    <!-- Başlık Bölümü -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center mb-3">
                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px; font-size: 1.5rem; font-weight: 600;">
                    @displayInitial
                </div>
                <div>
                    <h2 class="mb-1">@displayName</h2>
                    <p class="text-muted mb-0">Profil bilgilerinizi yönetin</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Sol Kolon - Profil Tamamlama -->
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-person-plus me-2"></i>
                        Profil Tamamlama
                    </h5>
                </div>
                <div class="card-body p-4">
                    <p class="text-muted mb-4">
                        <i class="bi bi-info-circle me-2"></i>
                        Profil bilgilerinizi tamamlayarak toplulukta daha iyi tanınabilirsiniz.
                    </p>
                    
                    @if (isProfileCompleted)
                    {
                        <div class="alert alert-info mb-4">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>Profiliniz zaten tamamlanmış!</strong> Bilgilerinizi güncellemek için sağdaki "Bilgilerimi Güncelle" formunu kullanabilirsiniz.
                        </div>
                        
                        <div class="card bg-light border-0 mb-4">
                            <div class="card-body">
                                <h6 class="fw-semibold mb-3">
                                    <i class="bi bi-person-circle me-2"></i>Mevcut Profil Bilgileriniz
                                </h6>
                                <div class="row">
                                    <div class="col-md-6">
                                        <p class="mb-2"><strong>Takma Ad:</strong> @userProfile.NickName</p>
                                        <p class="mb-2"><strong>Meslek:</strong> @userProfile.Job</p>
                                    </div>
                                    <div class="col-md-6">
                                        <p class="mb-2"><strong>E-posta:</strong> @userProfile.Email</p>
                                        <p class="mb-0"><strong>Hakkımda:</strong> @(string.IsNullOrEmpty(userProfile.About) ? "Belirtilmemiş" : userProfile.About)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else if (string.IsNullOrEmpty(nickName))
                    {
                        <div class="alert alert-warning mb-4">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <strong>Hoş geldiniz!</strong> Profilinizi tamamlayarak toplulukta daha iyi tanınabilirsiniz. Takma ad, meslek ve hakkımda bilgilerinizi ekleyin.
                        </div>
                        
                        <form method="post" action="/Account/CompleteProfile">
                            <input type="hidden" name="UserId" value="@userProfile?.Id" />
                            <div class="mb-3">
                                <label for="nickName" class="form-label fw-semibold">
                                    <i class="bi bi-person-badge me-1"></i>Takma Ad
                                </label>
                                <input type="text" class="form-control" id="nickName" name="NickName" 
                                       value="@userProfile?.NickName" placeholder="Örn: YazılımGurusu" required>
                                <div class="form-text">
                                    <i class="bi bi-lightbulb me-1"></i>
                                    Benzersiz bir takma ad seçin (3-20 karakter)
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="job" class="form-label fw-semibold">
                                    <i class="bi bi-briefcase me-1"></i>Meslek
                                </label>
                                <input type="text" class="form-control" id="job" name="Job" 
                                       value="@userProfile?.Job" placeholder="Örn: Senior Backend Developer" required>
                                <div class="form-text">
                                    <i class="bi bi-lightbulb me-1"></i>
                                    Mevcut veya hedef mesleğinizi belirtin
                                </div>
                            </div>

                            <div class="mb-4">
                                <label for="about" class="form-label fw-semibold">
                                    <i class="bi bi-chat-quote me-1"></i>Hakkımda
                                </label>
                                <textarea class="form-control" id="about" name="About" rows="4" 
                                          placeholder="Kendinizi kısaca tanıtın..." required>@userProfile?.About</textarea>
                                <div class="form-text">
                                    <i class="bi bi-lightbulb me-1"></i>
                                    Maksimum 500 karakter
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-check-circle me-2"></i>
                                Profili Tamamla
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>

        <!-- Sağ Kolon - Profil Güncelleme -->
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-pencil-square me-2"></i>
                        Bilgilerimi Güncelle
                    </h5>
                </div>
                <div class="card-body p-4">
                    <p class="text-muted mb-4">
                        <i class="bi bi-info-circle me-2"></i>
                        Mevcut profil bilgilerinizi güncelleyebilir veya şifrenizi değiştirebilirsiniz.
                    </p>
                    
                    <form method="post" action="/Account/UpdateProfile">
                        <input type="hidden" name="Id" value="@userProfile?.Id" />
                        <div class="mb-3">
                            <label for="updateNickName" class="form-label fw-semibold">
                                <i class="bi bi-person-badge me-1"></i>Takma Ad
                            </label>
                            <input type="text" class="form-control" id="updateNickName" name="NickName" 
                                   value="@userProfile?.NickName" placeholder="Yeni takma ad">
                        </div>

                        <div class="mb-3">
                            <label for="updateJob" class="form-label fw-semibold">
                                <i class="bi bi-briefcase me-1"></i>Meslek
                            </label>
                            <input type="text" class="form-control" id="updateJob" name="Job" 
                                   value="@userProfile?.Job" placeholder="Güncel mesleğiniz">
                        </div>

                        <div class="mb-3">
                            <label for="updateAbout" class="form-label fw-semibold">
                                <i class="bi bi-chat-quote me-1"></i>Hakkımda
                            </label>
                            <textarea class="form-control" id="updateAbout" name="About" rows="3" 
                                      placeholder="Güncel hakkımda bilginiz">@userProfile?.About</textarea>
                        </div>

                        <hr class="my-4">

                        <div class="mb-3">
                            <label for="currentPassword" class="form-label fw-semibold">
                                <i class="bi bi-lock me-1"></i>Mevcut Şifre
                            </label>
                            <input type="password" class="form-control" id="currentPassword" name="CurrentPassword" 
                                   placeholder="Mevcut şifrenizi girin">
                        </div>

                        <div class="mb-3">
                            <label for="newPassword" class="form-label fw-semibold">
                                <i class="bi bi-key me-1"></i>Yeni Şifre
                            </label>
                            <input type="password" class="form-control" id="newPassword" name="NewPassword" 
                                   placeholder="Yeni şifrenizi girin">
                        </div>

                        <div class="mb-4">
                            <label for="confirmPassword" class="form-label fw-semibold">
                                <i class="bi bi-shield-check me-1"></i>Şifre Tekrarı
                            </label>
                            <input type="password" class="form-control" id="confirmPassword" name="ConfirmPassword" 
                                   placeholder="Yeni şifrenizi tekrar girin">
                        </div>

                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-arrow-clockwise me-2"></i>
                            Bilgileri Güncelle
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Alt Bilgi Kartları -->
    <div class="row mt-5 g-4">
        <div class="col-md-4">
            <div class="card border-0 bg-light">
                <div class="card-body text-center p-4">
                    <i class="bi bi-shield-check text-primary fs-1 mb-3"></i>
                    <h6 class="fw-semibold">Güvenli</h6>
                    <p class="text-muted small mb-0">Bilgileriniz güvenle saklanır ve korunur</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 bg-light">
                <div class="card-body text-center p-4">
                    <i class="bi bi-lightning text-warning fs-1 mb-3"></i>
                    <h6 class="fw-semibold">Hızlı</h6>
                    <p class="text-muted small mb-0">Anında güncelleme ve değişiklikler</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 bg-light">
                <div class="card-body text-center p-4">
                    <i class="bi bi-people text-success fs-1 mb-3"></i>
                    <h6 class="fw-semibold">Topluluk</h6>
                    <p class="text-muted small mb-0">Diğer kullanıcılarla etkileşim kurun</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Başarı/Hata Mesajları -->
@if (TempData["ProfileSuccess"] != null)
{
    <div class="alert alert-success alert-dismissible fade show position-fixed top-0 end-0 m-4" role="alert" style="z-index:9999; min-width:220px;">
        <i class="bi bi-check-circle-fill me-2"></i>
        @TempData["ProfileSuccess"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ProfileError"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show position-fixed top-0 end-0 m-4" role="alert" style="z-index:9999; min-width:220px;">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @TempData["ProfileError"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@section Scripts {
    <script>
        // Şifre eşleşme kontrolü
        document.getElementById('confirmPassword').addEventListener('input', function() {
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = this.value;
            
            if (newPassword !== confirmPassword) {
                this.setCustomValidity('Şifreler eşleşmiyor!');
            } else {
                this.setCustomValidity('');
            }
        });

        // Karakter sayacı
        document.getElementById('about').addEventListener('input', function() {
            const maxLength = 500;
            const currentLength = this.value.length;
            const remaining = maxLength - currentLength;
            
            const formText = this.parentElement.querySelector('.form-text');
            if (remaining < 50) {
                formText.innerHTML = `<i class="bi bi-lightbulb me-1"></i>Kalan karakter: ${remaining}`;
                if (remaining < 0) {
                    formText.classList.add('text-danger');
                } else {
                    formText.classList.remove('text-danger');
                }
            }
        });

        // Takma ad benzersizlik kontrolü (opsiyonel)
        document.getElementById('nickName').addEventListener('blur', function() {
            const nickName = this.value;
            if (nickName.length >= 3) {
                // Burada AJAX ile backend'e kontrol isteği gönderilebilir
                console.log('Takma ad kontrolü:', nickName);
            }
        });
    </script>
} 