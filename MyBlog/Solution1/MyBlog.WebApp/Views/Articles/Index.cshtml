@model List<WebApp.Models.ArticleViewModel.ArticleListViewModel>

<div class="container pt-3 pb-4">
    <h4 class="mb-4">Makaleler</h4>
    <div class="row g-3">
        @foreach (var article in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow article-card">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">
                            <a asp-controller="Articles" asp-action="Detail" asp-route-id="@article.Id" class="text-decoration-none">
                                @article.Title
                            </a>
                        </h5>
                        <div class="mb-2">
                            <span class="badge bg-primary">@article.CategoryName</span>
                        </div>
                        <div class="mt-auto d-flex justify-content-between align-items-center">
                            <small class="text-muted">Yazar: @article.AuthorNickName</small>
                            <span class="badge bg-secondary">@article.CommentCount Yorum</span>
                        </div>
                        <small class="text-muted mt-2">@article.CreatedAt.ToString("dd.MM.yyyy")</small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<style>
.article-card {
    transition: transform 0.15s cubic-bezier(.4,2,.6,1), box-shadow 0.15s;
    border: none;
    border-radius: 1rem;
    margin-top: 0.2rem; 
}
.article-card:hover {
    transform: translateY(-6px) scale(1.03);
    box-shadow: 0 8px 32px rgba(80,80,160,0.12);
    border: 1.5px solid #4f8cff22;
}
.article-card .card-title {
    font-weight: 600;
    color: #2d2d2d;
    font-size: 1.05rem; 
}
.article-card .card-text {
    color: #555;
    font-size: 0.97rem;
    margin-bottom: 0.65rem;
}
.article-card .badge {
    font-size: 0.78em;
    padding: 0.35em 0.7em;
    border-radius: 0.7em;
}
</style> 