@model WebApp.Models.ArticleViewModel.ArticleDetailViewModel
@{
    Layout = "_Layout";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 px-0">
            <div class="mx-auto" style="max-width:1200px;">
                <div class="card shadow-sm border-0 mb-4" style="border-radius: 1.2rem;">
                    <div class="card-body p-4 p-md-5">
                        <h1 class="card-title mb-2" style="font-size:2rem; font-weight:700; color:#2d2d2d;">@Model.Title</h1>
                        <div class="mb-3 d-flex flex-wrap align-items-center gap-3">
                            <span class="badge bg-primary"><i class="bi bi-person me-1"></i> @Model.AuthorNickName</span>
                            <span class="badge bg-light text-dark"><i class="bi bi-calendar-event me-1"></i> @Model.CreatedAt.ToString("dd.MM.yyyy")</span>
                        </div>
                        <hr />
                        <div class="mb-4" style="white-space: pre-line; font-size:1.13rem; color:#333;">@Model.Content</div>
                    </div>
                </div>

                <div class="card shadow-sm border-0 mt-4" style="border-radius: 1.2rem; background:#fafbfc; max-height:320px; overflow-y:auto;">
                    <div class="card-body p-2 p-md-3">
                        <h6 class="mb-2" style="font-weight:600; color:#3b3b3b; font-size:1rem;"><i class="bi bi-chat-dots me-2 text-primary"></i>Yorumlar</h6>
                        @if (Model.Comments != null && Model.Comments.Any())
                        {
                            <ul class="list-group list-group-flush">
                                @foreach (var comment in Model.Comments)
                                {
                                    <li class="list-group-item px-0 py-1" style="background:transparent; border:none; border-bottom:1px solid #f1f5f9;">
                                        <div class="d-flex align-items-center mb-1">
                                            <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-2" style="width:24px; height:24px; font-size:0.85rem; font-weight:600;">
                                                @comment.CommenterNickName.Substring(0,1).ToUpper()
                                            </div>
                                            <div>
                                                <span class="fw-semibold" style="font-size:0.92rem;">@comment.CommenterNickName</span>
                                                <span class="text-muted small ms-2"><i class="bi bi-clock"></i> @comment.CreatedAt.ToString("dd.MM.yyyy HH:mm")</span>
                                            </div>
                                        </div>
                                        <div style="font-size:0.92rem; color:#444; margin-left:32px;">@comment.Content</div>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted mb-0">Hen√ºz yorum yok.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>